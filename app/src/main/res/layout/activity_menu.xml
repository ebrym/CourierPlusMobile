<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.courierplus.mobile.LoginActivity"
    android:id="@+id/menuView">

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/GridLayout1"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:columnCount="2"
android:rowCount="3"
android:padding="10dp"
android:orientation="horizontal"
tools:context=".GridLayoutActivity">


<Button
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:id="@+id/btnPickUp"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:layout_margin="5dp"
    android:background="@drawable/packages"
    android:text="PickUp"
    android:ems="10"
    android:textStyle="bold"
    android:layout_row="0"
    android:layout_column="0"
    android:textColor="@color/colorText"/>
<Button
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:id="@+id/btnScan"
    android:layout_centerVertical="true"
    android:layout_margin="5dp"
    android:layout_centerHorizontal="true"
    android:background="@drawable/menuscan"
    android:text="Scan"
    android:ems="10"
    android:textStyle="bold"
    android:layout_row="0"
    android:layout_column="1"
    android:textColor="@color/colorText"/>
<Button
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:id="@+id/btnPod"
    android:layout_centerVertical="true"
    android:layout_margin="5dp"
    android:layout_centerHorizontal="true"
    android:background="@drawable/mnupod"
    android:text="POD"
    android:ems="10"
    android:textStyle="bold"
    android:layout_row="1"
    android:layout_column="0"
    android:textColor="@color/colorText"/>
    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/btnTracking"
        android:layout_margin="5dp"
        android:background="@drawable/tracking"
        android:layout_gravity="bottom"
        android:text="Track Shipment"
        android:ems="10"
        android:textStyle="bold"
        android:layout_row="1"
        android:layout_column="1"
        android:textColor="@color/colorText"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/btnUpload"
        android:layout_margin="5dp"
        android:background="@drawable/sync"
        android:layout_gravity="bottom"
        android:text="Data List"
        android:ems="10"
        android:textStyle="bold"
        android:layout_row="2"
        android:layout_column="0"
        android:textColor="@color/colorText"/>


</GridLayout>
    <LinearLayout
        android:id="@+id/UserDetailsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Details" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtUserDetials"/>
       </LinearLayout>
    </LinearLayout>